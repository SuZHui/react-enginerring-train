{
  "root": true,
  "env": {
    "browser": true
  },
  "ignorePatterns": ["build/*"],
  "parser": "@babel/eslint-parser",
  "extends": [
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "rules": {
    "semi": [2, "never"]
  }
}