{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "17.0.2"
    }
  },
  "ignorePatterns": ["build/*", "node_modules/*"],
  "parser": "@babel/eslint-parser",
  "extends": [
    // "plugin:react/recommended",
    // "plugin:react/jsx-runtime",
    "airbnb",
    "airbnb/hooks",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "eol-last": [2, "always"]
  }
}