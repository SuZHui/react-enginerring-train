{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "17.0.2"
    }
  },
  "ignorePatterns": ["build/*", "node_modules/*"],
  "parser": "@babel/eslint-parser",
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "eol-last": [2, "always"],
    "react/jsx-props-no-spreading": 0,
    "import/extensions": "off",
    "import/no-unresolved": [
      2,
      {
        "ignore": ["^@/"] // @ 是设置的路径别名
      }
    ]
  }
}
